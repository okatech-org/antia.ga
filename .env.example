# ============================================
# Configuration Firebase
# ============================================
FIREBASE_PROJECT_ID=gabon-news-hub
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=gabon-news-hub.firebaseapp.com
FIREBASE_STORAGE_BUCKET=gabon-news-hub.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# ============================================
# Configuration Google Cloud
# ============================================
GOOGLE_CLOUD_PROJECT=gabon-news-hub
GOOGLE_CLOUD_REGION=europe-west1

# ============================================
# Configuration Gemini API
# ============================================
GEMINI_API_KEY=your-gemini-api-key

# ============================================
# Configuration Scraping
# ============================================
# Délai minimum entre requêtes (ms)
SCRAPING_DELAY_MS=2000
# Nombre max de tentatives
SCRAPING_MAX_RETRIES=3
# User Agent personnalisé
SCRAPING_USER_AGENT=GabonNewsBot/1.0 (+https://gabon-news-hub.web.app)

# ============================================
# Configuration App
# ============================================
NODE_ENV=development
